<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:LiveRunnerApp.Controls"
    xmlns:game="clr-namespace:LiveRunnerApp.GameComponents"
    x:Class="LiveRunnerApp.GamePage"
    x:DataType="game:Game"
    Shell.NavBarIsVisible="False">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="DashboardHeader" TargetType="Label">
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="FontSize" Value="20" />
            </Style>
            <Style x:Key="DashboardValue" TargetType="Label">
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="FontSize" Value="18" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid
        RowDefinitions="Auto,Auto,*"
        ColumnDefinitions="*,*,*"
        RowSpacing="3"
        Padding="24">

        <!-- SCORE -->
        <Label
            Text="Score"
            Style="{StaticResource DashboardHeader}" />
        <Label
            Grid.Row="1"
            Text="{Binding Score}"
            Style="{StaticResource DashboardValue}" />

        <!-- LIVES -->
        <Label
            Grid.Column="1"
            Text="Lives"
            Style="{StaticResource DashboardHeader}" />
        <Label
            Grid.Column="1"
            Grid.Row="1"
            Text="{Binding LivesRemaining}"
            Style="{StaticResource DashboardValue}" />

        <!-- TIME -->
        <Label
            Grid.Column="2"
            Text="Time"
            Style="{StaticResource DashboardHeader}" />
        <Label
            Grid.Column="2"
            Grid.Row="1"
            Text="{Binding TimeElapsed}"
            Style="{StaticResource DashboardValue}" />

        <!-- GAME -->
        <controls:GameSurface
            x:Name="gameSurface"
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Margin="0,9,0,0"
            IsAnimationEnabled="true"
            Updated="OnFrameUpdate"
            Paint="OnFrameDraw">
            <controls:GameSurface.GestureRecognizers>
                <SwipeGestureRecognizer
                    Direction="Left,Right"
                    Swiped="OnSwiped" />
            </controls:GameSurface.GestureRecognizers>
        </controls:GameSurface>

    </Grid>

</ContentPage>
