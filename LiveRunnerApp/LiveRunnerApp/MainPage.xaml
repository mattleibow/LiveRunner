<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
    x:Class="LiveRunnerApp.MainPage"
    Shell.NavBarIsVisible="False"
    >

    <Grid
        RowDefinitions="Auto,*"
        ColumnDefinitions="*,*"
        RowSpacing="12"
        Padding="24">

        <Label>
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Score: " />
                    <Span Text="###" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Label
            Grid.Column="1"
            HorizontalOptions="End">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Time: " />
                    <Span Text="###" />
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <skia:SKCanvasView
            x:Name="gameSurface"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            PaintSurface="OnDrawGame" />

    </Grid>

</ContentPage>
