<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LiveRunnerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LiveRunnerApp"
    Title="LiveRunnerApp">

    <ShellContent
        Title="PLAY"
        ContentTemplate="{DataTemplate local:GamePage}"
        Route="game" />

    <ShellContent
        Title="Sandbox"
        ContentTemplate="{DataTemplate local:SandboxPage}"
        Route="sandbox" />

    <ShellContent
        Title="Main Menu"
        ContentTemplate="{DataTemplate local:MainMenuPage}"
        Route="menu" />

</Shell>
